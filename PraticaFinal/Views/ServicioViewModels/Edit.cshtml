@model PraticaFinal.Models.ServicioViewModel

@{
    ViewData["Title"] = "Editar Servicio";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Editar Información del Servicio</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ServicioID" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DuracionMin" class="form-label"></label>
                    <input asp-for="DuracionMin" class="form-control" />
                    <span asp-validation-for="DuracionMin" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
