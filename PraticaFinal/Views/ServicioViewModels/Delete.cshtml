@model PraticaFinal.Models.ServicioViewModel

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">¿Estás seguro que deseas eliminar este servicio?</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.DuracionMin)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DuracionMin)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ServicioID" />
                <div class="text-end">
                    <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
