@model IEnumerable<PraticaFinal.Models.ServicioViewModel>

@{
    ViewData["Title"] = "Listado de Servicios";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Listado de Servicios</h4>
            <a asp-action="Create" class="btn btn-success">+ Nuevo Servicio</a>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.DuracionMin)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.DuracionMin minutos</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ServicioID" class="btn btn-sm btn-warning me-1">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.ServicioID" class="btn btn-sm btn-info me-1 text-white">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.ServicioID" class="btn btn-sm btn-danger">Eliminar</a>
                                <a class="btn btn-success mb-1" asp-action="ExportToCSV">Exportar a CSV</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
