@model PraticaFinal.Models.TerapeutaViewModel

@{
    ViewData["Title"] = "Eliminar Terapeuta";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Eliminación</h4>
        </div>

        <div class="card-body">
            <h5 class="mb-4">¿Estás seguro de que deseas eliminar este terapeuta?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Especialidad</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Especialidad)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="TerapeutaID" />
                <div class="text-end">
                    <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
