@model PraticaFinal.Models.TerapeutaViewModel

@{
    ViewData["Title"] = "Detalles del Terapeuta";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Detalles del Terapeuta</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Especialidad</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Especialidad)</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model?.TerapeutaID" class="btn btn-warning px-4">Editar</a>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </div>
    </div>
</div>
