@model IEnumerable<PraticaFinal.Models.TerapeutaViewModel>

@{
    ViewData["Title"] = "Listado de Terapeutas";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Listado de Terapeutas</h4>
            <a asp-action="Create" class="btn btn-success px-4">Crear Nuevo</a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
                        <th style="width: 25%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Especialidad</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-warning me-1">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-info text-white me-1">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
