@model IEnumerable<PraticaFinal.Models.TerapeutaViewModel>

@{
    ViewData["Title"] = "Listado de Terapeutas";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Terapeutas</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Terapeuta</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Especialidad</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-info text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.TerapeutaID" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
