@model IEnumerable<PraticaFinal.Models.CitaViewModel>

@{
    ViewData["Title"] = "Listado de Citas";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Listado de Citas</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">Crear Nueva Cita</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Hora)</th>
                <th>@Html.DisplayNameFor(model => model.Paciente)</th>
                <th>@Html.DisplayNameFor(model => model.Servicio)</th>
                <th>@Html.DisplayNameFor(model => model.Terapeuta)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hora)</td>
                    <td>@item.Paciente?.Email</td>
                    <td>@item.Servicio?.Nombre</td>
                    <td>@item.Terapeuta?.Especialidad</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CitaID" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.CitaID" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.CitaID" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
