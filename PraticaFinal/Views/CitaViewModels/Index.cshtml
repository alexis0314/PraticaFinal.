@model IEnumerable<PraticaFinal.Models.CitaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Terapeuta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terapeuta.Especialidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CitaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CitaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CitaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
