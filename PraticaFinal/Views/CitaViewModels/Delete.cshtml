@model PraticaFinal.Models.CitaViewModel

@{
    ViewData["Title"] = "Eliminar Cita";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-danger">
        ¿Estás seguro que deseas eliminar esta cita?
    </div>

    <div class="card p-3">
        <dl class="row">
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Fecha</dd>

            <dt class="col-sm-3">Hora</dt>
            <dd class="col-sm-9">@Model.Hora</dd>

            <dt class="col-sm-3">Paciente</dt>
            <dd class="col-sm-9">@Model.Paciente.Email</dd>

            <dt class="col-sm-3">Servicio</dt>
            <dd class="col-sm-9">@Model.Servicio.Nombre</dd>

            <dt class="col-sm-3">Terapeuta</dt>
            <dd class="col-sm-9">@Model.Terapeuta.Especialidad</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CitaID" />
        <button type="submit" class="btn btn-danger mt-3">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">Cancelar</a>
    </form>
</div>
