@model PraticaFinal.Models.CitaViewModel

@{
    ViewData["Title"] = "Editar Cita";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="CitaID" />

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Hora" class="form-label"></label>
            <input asp-for="Hora" class="form-control" />
            <span asp-validation-for="Hora" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PacienteID" class="form-label"></label>
            <select asp-for="PacienteID" asp-items="ViewBag.Pacientes" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="ServicioID" class="form-label"></label>
            <select asp-for="ServicioID" asp-items="ViewBag.Servicios" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="TerapeutaID" class="form-label"></label>
            <select asp-for="TerapeutaID" asp-items="ViewBag.Terapeutas" class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
